# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_WHISPER_MODEL=whisper-1

# Audio Configuration
MIC_SAMPLE_RATE=16000
MIC_CHUNK_SIZE=1024
MIC_CHANNELS=1
SILENCE_THRESHOLD=500
SILENCE_DURATION=2.0

# Voice Output Configuration
TTS_MODEL=tts-1-hd
TTS_VOICE=alloy
# Options: alloy, echo, fable, onyx, nova, shimmer
TTS_SPEED=1.0

# Context and Memory Configuration
MAX_CONTEXT_LENGTH=10
CONTEXT_WINDOW_HOURS=24
ENABLE_PERSISTENT_MEMORY=true
MEMORY_DB_PATH=./data/context.db

# Wake Word Configuration
ENABLE_WAKE_WORD=true
WAKE_WORD=hey assistant
WAKE_WORD_SENSITIVITY=0.5

# Natural Language Understanding
NLU_TEMPERATURE=0.7
NLU_MAX_TOKENS=500
NLU_SYSTEM_PROMPT="You are a helpful ambient AI assistant that responds naturally to voice commands."

# Sensor Integration
ENABLE_SENSORS=false
SENSOR_UPDATE_INTERVAL=30
TEMPERATURE_SENSOR_PIN=4
MOTION_SENSOR_PIN=17
LIGHT_SENSOR_PIN=27

# Security and Privacy
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=generate_this_with_cryptography_fernet_key
LOG_USER_QUERIES=false
AUTO_DELETE_CONTEXT_DAYS=30

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8080

# Performance Optimization
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
USE_LOCAL_WHISPER=false
LOCAL_WHISPER_MODEL_SIZE=base
# Options: tiny, base, small, medium, large

# Advanced Features
ENABLE_SPATIAL_AUDIO=false
ENABLE_EMOTION_DETECTION=false
ENABLE_MULTI_LANGUAGE=false
DEFAULT_LANGUAGE=en

# Development Settings
DEBUG_MODE=false
ENABLE_MOCK_SENSORS=false
SAVE_AUDIO_FILES=false
AUDIO_SAVE_PATH=./data/audio/

# API Configuration (if exposing REST API)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration (optional)
DATABASE_URL=sqlite:///./data/ambient_ai.db
# For PostgreSQL: postgresql://user:password@localhost/ambient_ai
# For Redis: redis://localhost:6379/0

# Cloud Deployment (optional)
DEPLOYMENT_ENV=development
# Options: development, staging, production
CLOUD_PROVIDER=none
# Options: none, aws, gcp, azure

# Feature Flags
ENABLE_CONVERSATION_ANALYTICS=false
ENABLE_VOICE_CLONING=false
ENABLE_REAL_TIME_TRANSLATION=false
